<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rcv_tvName"
        android:layout_width="131dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcv_tvAddress"
        android:layout_width="199dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_tvName"
        app:layout_constraintStart_toEndOf="@+id/rcv_tvName"
        app:layout_constraintTop_toTopOf="@+id/rcv_tvName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/rcv_ibtnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/rcv_tvName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rcv_tvName"
        app:layout_constraintTop_toBottomOf="@+id/rcv_tvName"
        app:srcCompat="@drawable/ic_baseline_swap_horiz_24" />

</androidx.constraintlayout.widget.ConstraintLayout>